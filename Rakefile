task :default => :jugarpiedra

desc 'Juega al piedra-papel-tijeras con la opcion "piedra"'
task :jugarpiedra do
  sh "ruby bin/piedrapapeltijeras.rb piedra"
end

desc 'Juega al piedra-papel-tijeras con la opcion "papel"'
task :jugarpapel do
  sh "ruby bin/piedrapapeltijeras.rb papel"
end

desc 'Juega al piedra-papel-tijeras con la opcion "tijeras"'
task :jugartijeras do
  sh "ruby bin/piedrapapeltijeras.rb tijeras"
end